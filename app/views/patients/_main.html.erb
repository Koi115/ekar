<div class="main-header">
  <div class="main-header-wrap">
    <div class="main-header-ward">1病棟</div>

    <div class="main-header-contents">
      <div class="pt-count-wrap">
        <div>患者数</div>
          <div  class="contents-font">
            <div>現在数  48 名</div>
            <div>総床数  50 名</div>
            <div>　</div>
          </div>
      </div>

      <div class="gender-count-wrap">
          <div>性別</div>
          <div  class="contents-font">
            <div>男性  24 名</div>
            <div>女性  24 名</div>
            <div>その他  0 名</div>
        </div>
      </div>

      <div class="inf-count-wrap">
          <div>感染症</div>
